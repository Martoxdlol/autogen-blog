---
import { getCurrentLang } from '../util/internationalization';

interface Props {
    title: string
    description?: string
}

const { title, description, lang } = Astro.props;

---

<style>
    * {
        box-sizing: border-box;
    }

    ul, ol {
        max-width: 100%;
        overflow: auto;
    }

    body {
        max-width: 100%;
        overflow-x: hidden;
    }
</style>

<!DOCTYPE html>
<html lang={lang}>
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
